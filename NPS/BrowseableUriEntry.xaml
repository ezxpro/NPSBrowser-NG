<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NPS.BrowseableUriEntry">

    <StackPanel Orientation="Horizontal">
        <TextBlock Name="Label" IsVisible="False" VerticalAlignment="Center" MinWidth="75" Margin="0, 0, 4, 0" />
        <TextBox Name="TextBox" Margin="0, 0, 4, 0" MinWidth="300" />
        <Button Name="BrowseButton" Content="Browse"/>
    </StackPanel>
</UserControl>